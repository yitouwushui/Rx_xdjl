<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textViewBack_e2e2e2"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar"
            android:id="@+id/forget_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="手机号："
                android:textColor="@color/color_login_text_343434"
                android:textSize="28px" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/color_huoke_333333"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/textViewBack_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="输入密码："
                    android:textColor="@color/color_login_text_343434"
                    android:textSize="28px" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:textColor="@color/color_huoke_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/textViewBack_e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="确认密码"
                    android:textColor="@color/color_login_text_343434"
                    android:textSize="28px" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edit_verify_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:textColor="@color/color_huoke_333333"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/textViewBack_e2e2e2" />

        <LinearLayout
            android:id="@+id/linear_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="验证码 : "
                    android:textColor="@color/color_login_text_343434"
                    android:textSize="28px" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edit_identifying_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/color_huoke_333333"
                        android:textSize="28px" />

                    <Button
                        android:id="@+id/button_get_identifying_code"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:background="@drawable/button_yzm_background"
                        android:text="获取验证码"
                        android:textColor="@color/color_hk_sqjd_nor_0063b0"
                        android:textSize="26px" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textViewBack_e2e2e2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="*如长时间未收到短信验证码，请获取"
                    android:textColor="@color/color_login_text_343434"
                    android:textSize="26px" />

                <LinearLayout
                    android:id="@+id/linear_voice_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_voice_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="语音验证"
                        android:textColor="@color/color_hk_sqjd_nor_0063b0"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/voice_line"
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:background="@color/color_hk_sqjd_nor_0063b0"
                        android:text="语音验证"
                        android:textSize="26px" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/textViewBack_e2e2e2" />


        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/button_login"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="28px" />
    </LinearLayout>
</layout>