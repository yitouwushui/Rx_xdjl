<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.ecar.insurance.mvvm.view.frag.HomeFragment">

        <!-- TODO: Update blank fragment layout -->

        <cn.ecar.insurance.widget.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_home_top_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="@dimen/activity_home_left"
            android:layout_marginRight="@dimen/activity_home_right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="63px"
                android:layout_height="63px"
                android:layout_gravity="center_vertical" />

            <ViewFlipper
                android:id="@+id/homepage_notice_vf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_home_left"
                android:layout_marginRight="@dimen/activity_home_right"
                android:layout_weight="1" />

            <Button
                android:id="@+id/bt_sign"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="140px"
                android:layout_height="56px"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                android:text="签到"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px">

            <ImageView
                android:id="@+id/img_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />


        <LinearLayout
            android:id="@+id/line_notice"
            android:layout_width="match_parent"
            android:layout_height="440px"
            android:layout_margin="@dimen/activity_home_left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40px">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12月英雄榜"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="16px"
                    android:layout_height="match_parent"
                    android:layout_gravity="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_marginTop="29px"
                android:gravity="center"
                android:singleLine="true"
                android:text="xxx分享给了朋友，获得200元" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_view_member"
                android:layout_marginTop="22px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />
    </LinearLayout>
</layout>