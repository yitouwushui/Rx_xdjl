<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.ecar.insurance.mvvm.view.frag.HomeFragment">

        <!-- TODO: Update blank fragment layout -->

        <cn.ecar.insurance.widget.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_home_top_height"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="@dimen/activity_home_left"
            android:layout_marginRight="@dimen/activity_home_right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="63px"
                android:layout_height="63px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/home_news" />

            <ViewFlipper
                android:id="@+id/homepage_notice_vf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_home_left"
                android:layout_marginRight="@dimen/activity_home_right"
                android:layout_weight="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/bt_sign"
                android:layout_width="140px"
                android:layout_height="56px"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/img_bt_bg"
                android:padding="0dp"
                android:text="签到"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px">

            <LinearLayout
                android:id="@+id/bt_insurance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:src="@mipmap/home_bar_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="车险"
                    android:textColor="@color/main_black_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:src="@mipmap/home_bar_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="分享"
                    android:textColor="@color/main_black_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_study"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:src="@mipmap/home_bar_school" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="小宝学堂"
                    android:textColor="@color/main_black_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88px"
                    android:layout_height="88px"
                    android:src="@mipmap/home_bar_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="客服"
                    android:textColor="@color/main_black_text" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />


        <LinearLayout
            android:id="@+id/line_notice"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="@dimen/activity_home_left"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40px">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/home_title2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:text="明星会员榜"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="8px"-->
                <!--android:layout_marginRight="8px"-->
                <!--android:text="更多"-->
                <!--android:textColor="@color/main_black_text" />-->

                <!--<ImageView-->
                <!--android:layout_width="16px"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="end"-->
                <!--android:src="@mipmap/img_right" />-->
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/tv_notice"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="56px"-->
            <!--android:layout_marginTop="29px"-->
            <!--android:background="@mipmap/img_notice_bg"-->
            <!--android:gravity="center"-->
            <!--android:singleLine="true"-->
            <!--android:text="xxx分享给了朋友，获得200元"-->
            <!--android:textColor="@color/white" />-->
            <ViewFlipper
                android:id="@+id/homepage_share_vf"
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:layout_marginTop="29px"
                android:background="@mipmap/img_notice_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_home_left"
                android:paddingRight="@dimen/activity_home_left"
                android:singleLine="true"
                android:text="xxx分享给了朋友，获得200元"
                android:textColor="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_view_member"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_marginTop="16px"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval"
            android:background="@color/main_background" />
    </LinearLayout>
</layout>