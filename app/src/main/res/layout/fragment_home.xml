<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cn.ecar.insurance.xdjl.mvvm.view.frag.HomeFragment">

        <!-- TODO: Update blank fragment layout -->

        <cn.ecar.insurance.xdjl.widget.convenientbanner.ConvenientBanner
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69" />

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/bt_sign"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:text="签到" />

        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66">

            <ImageView
                android:id="@+id/img_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/check3x" />
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval" />

        <LinearLayout
            android:id="@+id/line_notice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="xxx分享给了朋友，获得200元" />
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_view_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <view
            android:layout_width="match_parent"
            android:layout_height="@dimen/interval" />
    </LinearLayout>
</layout>