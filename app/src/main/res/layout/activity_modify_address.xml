<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_home_left"
            android:paddingRight="@dimen/activity_home_right">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="收货人"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="限6个字"
                    android:singleLine="true"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="11位数字"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="地区"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:id="@+id/et_region"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="例:上海市浦东新区"
                    android:singleLine="true"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="详细地址"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dp_15" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="具体单元楼牌号"
                    android:singleLine="true"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="240px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="是否默认"
                    android:textColor="@color/main_gray"
                    android:textSize="@dimen/dp_15" />

                <CheckBox
                    android:id="@+id/ck_isDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_background" />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:background="@mipmap/img_notice_bg"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>
</layout>
